{
  "id": "composite_query_rewards_harvest_verify",
  "category": "composite_problems",
  "difficulty": "medium",
  "title": "Query Pending Rewards, Harvest Rewards, and Verify",
  "description": [
    "A composite problem that tests the LLM's ability to:",
    "1. Query pending rewards in the staking pool",
    "2. Execute a harvest rewards operation",
    "3. Query final reward token balance to verify the harvest"
  ],
  "natural_language_templates": [
    "Check your pending rewards in the pool, harvest them, then verify the reward tokens in your wallet",
    "Query pending rewards at {pool_address}, harvest all rewards, and confirm tokens received"
  ],
