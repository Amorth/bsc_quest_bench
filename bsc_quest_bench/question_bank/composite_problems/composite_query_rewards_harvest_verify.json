    "chain": "BSC",
    "network": "mainnet"
  },
  "composite_structure": {
    "atomic_operations": [
      {
        "step": 1,
        "atomic_id": "query_pending_rewards",
        "description": "Query initial pending rewards"
      },
      {
        "step": 2,
        "atomic_id": "harvest_rewards",
        "description": "Harvest rewards"
      },
      {
        "step": 3,
        "atomic_id": "query_erc20_balance",
        "description": "Query final reward token balance"
      }
    ]
  },
  "parameters": {
    "pool_address": {
      "type": "address",
      "role": "contract",
      "description": "SimpleRewardPool contract address",
      "shared_across_steps": [1, 2],
      "generation": {
        "method": "from_env",
        "env_key": "simple_reward_pool_address"
      }
    },
    "reward_token_address": {
      "type": "address",
      "role": "token",
      "description": "Reward token address (CAKE)",
      "shared_across_steps": [3],
      "generation": {
        "method": "fixed",
        "value": "0x0E09FaBB73Bd3Ade0a17ECC321fD13a19e81cE82",
        "comment": "CAKE token on BSC"
      }
    },
    "reward_token_decimals": {
      "type": "integer",
      "role": "calculation",
      "description": "Reward token decimals",
      "shared_across_steps": [2, 3],
      "generation": {
        "method": "fixed",
        "value": 18
      }
    }
  },
  "interaction_config": {
    "optimal_steps": 2,
    "max_rounds_multiplier": 2,
    "comment": "max_rounds = optimal_steps * max_rounds_multiplier = 2 * 2 = 4"
  },
  "scoring_strategy": {
    "method": "atomic_validator_reuse",
    "description": "Directly reuse the atomic validator of the key operation - NO code duplication!",
    "key_operation_step": 2,
    "key_operation_id": "harvest_rewards",
    "key_operation_alias": "rewards_harvest",
    "validator_class": "HarvestRewardsValidator",
    "note": "The validator will load HarvestRewardsValidator and call its validate() method directly"
  },
  "tags": ["query-write-verify", "defi", "farming"]
